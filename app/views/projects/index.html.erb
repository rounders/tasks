<h1>Projects</h1>

<ul>
	<% for project in @projects %>
	<li><%= link_to project.name, project %> - <%= link_to 'edit', edit_project_path(project) %> - <%= link_to 'delete', project, :method => :delete, :confirm => 'Are you sure?' %></li>
	<% end %>
</ul>

<p>
	<%= link_to 'new project', new_project_path %>	
</p>

